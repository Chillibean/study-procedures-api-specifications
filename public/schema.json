{
  "openapi": "3.0.0",
  "info": {
    "version": "1.1.0",
    "title": "Study Procedures API",
    "description": "This is api specifications for all things related to study procedures",
    "contact": {
      "name": "ChilliPharm",
      "url": "https://www.chillipharm.com"
    }
  },
  "tags": [
    {
      "name": "Study Procedures",
      "description": "Endpoints for study procedures"
    }
  ],
  "servers": [
    {
      "url": "http://chillipharm.test:3000/api/v1",
      "description": "Local development"
    },
    {
      "url": "https://www.chillipharm.com/api/v1",
      "description": "Production"
    }
  ],
  "paths": {
    "/accounts/{account_id}/sites/{site_identifier}/subjects/{subject_number}/study_events/{study_event_identifier}/study_procedures": {
      "get": {
        "summary": "Get all study procedures for a study event",
        "security": [
          {
            "userSessionKey": [],
            "chillipharmSession": []
          }
        ],
        "tags": ["Study Procedures"],
        "operationId": "getStudyProcedures",
        "description": "Get all study procedures for a study event",
        "parameters": [
          {
            "name": "account_id",
            "in": "path",
            "description": "The account id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "1"
            }
          },
          {
            "name": "site_identifier",
            "in": "path",
            "description": "The site identifier",
            "required": true,
            "schema": {
              "type": "string",
              "example": "SITE1"
            }
          },
          {
            "name": "subject_number",
            "in": "path",
            "description": "The subject number",
            "required": true,
            "schema": {
              "type": "string",
              "example": "12345678"
            }
          },
          {
            "name": "study_event_identifier",
            "in": "path",
            "description": "The study event identifier",
            "required": true,
            "schema": {
              "type": "string",
              "example": "VISIT1"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/StudyProcedure"
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorised"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/accounts/{account_id}/sites/{site_identifier}/subjects/{subject_number}/study_events/{study_event_identifier}/study_procedures/{study_procedure_identifier}": {
      "get": {
        "summary": "Get a study procedure",
        "security": [
          {
            "userSessionKey": [],
            "chillipharmSession": []
          }
        ],
        "tags": ["Study Procedures"],
        "operationId": "getStudyProcedure",
        "description": "Get a study procedure",
        "parameters": [
          {
            "name": "account_id",
            "in": "path",
            "description": "The account id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "1"
            }
          },
          {
            "name": "site_identifier",
            "in": "path",
            "description": "The site identifier",
            "required": true,
            "schema": {
              "type": "string",
              "example": "SITE1"
            }
          },
          {
            "name": "subject_number",
            "in": "path",
            "description": "The subject number",
            "required": true,
            "schema": {
              "type": "string",
              "example": "12345678"
            }
          },
          {
            "name": "study_event_identifier",
            "in": "path",
            "description": "The study event identifier",
            "required": true,
            "schema": {
              "type": "string",
              "example": "VISIT1"
            }
          },
          {
            "name": "study_procedure_identifier",
            "in": "path",
            "description": "The study procedure identifier",
            "required": true,
            "schema": {
              "type": "string",
              "example": "PROC1"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StudyProcedure"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorised"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "userSessionKey": {
        "type": "apiKey",
        "in": "cookie",
        "name": "user_session_key",
        "description": "User session key cookie"
      },
      "chillipharmSession": {
        "type": "apiKey",
        "in": "cookie",
        "name": "_chillipharm_session",
        "description": "ChilliPharm session cookie"
      }
    },
    "schemas": {
      "StudyProcedure": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "The study procedure id",
            "example": 1
          },
          "identifier": {
            "type": "string",
            "description": "The study procedure identifier",
            "example": "P1"
          },
          "display_name": {
            "type": "string",
            "description": "The study procedure display name",
            "example": "p1"
          },
          "date": {
            "type": "string",
            "description": "The study procedure date",
            "example": "2023-12-21",
            "nullable": true
          },
          "protocol": {
            "$ref": "#/components/schemas/Protocol"
          },
          "role_definitions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RoleDefinition"
            }
          },
          "status": {
            "type": "string",
            "description": "The study procedure status",
            "example": "in_progress"
          }
        }
      },
      "Protocol": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "The protocol id",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "The protocol name",
            "example": "Beta Protocol"
          },
          "study_event_display_name": {
            "$ref": "#/components/schemas/DisplayName"
          },
          "study_procedure_display_name": {
            "$ref": "#/components/schemas/DisplayName"
          },
          "locked": {
            "type": "boolean",
            "description": "Whether the protocol is locked",
            "example": true
          },
          "version_number": {
            "type": "integer",
            "description": "The protocol version number",
            "example": 0
          },
          "study_procedure_role_definitions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/StudyProcedureRoleDefinition"
            }
          }
        }
      },
      "DisplayName": {
        "type": "object",
        "properties": {
          "singular": {
            "type": "string",
            "description": "The singular display name",
            "example": "visit"
          },
          "plural": {
            "type": "string",
            "description": "The plural display name",
            "example": "visits"
          }
        }
      },
      "RoleDefinition": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "The role definition id",
            "example": 1
          },
          "required": {
            "type": "boolean",
            "description": "Whether the role definition is required",
            "example": true
          },
          "contributors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Contributor"
            }
          },
          "role": {
            "$ref": "#/components/schemas/Role"
          }
        }
      },
      "StudyProcedureRoleDefinition": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "The study procedure role definition id",
            "example": 1
          },
          "required": {
            "type": "boolean",
            "description": "Whether the study procedure role definition is required",
            "example": true
          },
          "role": {
            "$ref": "#/components/schemas/Role"
          }
        }
      },
      "Contributor": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "The contributor id",
            "example": 1
          },
          "first_name": {
            "type": "string",
            "description": "The contributor first name",
            "example": "John"
          },
          "last_name": {
            "type": "string",
            "description": "The contributor last name",
            "example": "Doe"
          },
          "email": {
            "type": "string",
            "description": "The contributor email",
            "example": "test@gmail.com",
            "format": "email"
          }
        }
      },
      "Role": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "The role id",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "The role name",
            "example": "Principal Investigator"
          }
        }
      },
      "Error": {
        "description": "An error",
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "The error message",
            "example": "Bad request. Missing or invalid input parameters."
          }
        }
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Bad request. Missing or invalid input parameters.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "Unauthorised": {
        "description": "Unauthorised. Missing or invalid authentication credentials.",
        "content": {
          "application/json": {
            "schema": {
              "description": "An error",
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "The error message",
                  "example": "Unauthorised",
                  "enum": ["Unauthorised"]
                }
              },
              "required": ["error"],
              "additionalProperties": false
            }
          }
        }
      },
      "NotFound": {
        "description": "Not found. The requested resource was not found.",
        "content": {
          "application/json": {
            "schema": {
              "description": "An error",
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "The error message",
                  "example": "Not found",
                  "enum": ["Not found"]
                }
              },
              "required": ["error"],
              "additionalProperties": false
            }
          }
        }
      },
      "Forbidden": {
        "description": "Forbidden. The request was valid, but the server is refusing action.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "The error message",
                  "example": "You do not have sufficient permission to perform this action",
                  "enum": [
                    "You do not have sufficient permission to perform this action",
                    "Forbidden"
                  ]
                }
              }
            }
          }
        }
      },
      "Conflict": {
        "description": "Conflict. The request could not be completed due to a conflict with the current state of the resource.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Internal server error. Please contact support.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    }
  }
}
